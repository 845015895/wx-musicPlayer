/* pages/search/search.wxss */

::-webkit-input-placeholder {
    /* WebKit browsers */
    color: #c4c4c4;
}

:-moz-placeholder {
    /* Mozilla Firefox 4 to 18 */
    color: #c4c4c4;
}

::-moz-placeholder {
    /* Mozilla Firefox 19+ */
    color: #c4c4c4;
}

:-ms-input-placeholder {
    /* Internet Explorer 10+ */
    color: #c4c4c4;
}

.searchMain {
    width: 100%;
    height: 120rpx;
    padding: 30rpx 40rpx;
    box-sizing: border-box;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.searchBar {
    position: relative;
    display: flex;
    width: 100%;
    height: 100%;
    border-radius: 200rpx;
    border: 0;
    background: #ebecec;
    padding: 0 60rpx;
    box-sizing: border-box;
}

.searchImg {
    width: 28rpx;
    height: 28rpx;
    background-image: url("http://yizicheng.cn/images/search.svg") no-repeat;
    position: absolute;
    top: 16rpx;
    left: 16rpx;
}

.searchIpt {
    /*display: block;*/
    width: 100%;
    height: 100%;
    /*border-radius: px(100);*/
    border: 0;
    outline: none;
    background: transparent;
    font-size: 28rpx;
    /*padding: 0 px(30);*//*box-sizing: border-box;*/
}

.deleteImg {
    width: 28rpx;
    height: 28rpx;
    background-image: url("../assets/delete.svg") no-repeat;
    position: absolute;
    top: 16rpx;
    right: 16rpx;
}

.hotSearch {
    padding: 30rpx 26rpx 0;
}

.hotUl {
    margin: 20rpx 0 14rpx;
    list-style: none;
}

.li {
    display: inline-block;
    height: 64rpx;
    margin-right: 16rpx;
    margin-bottom: 16rpx;
    padding: 0 28rpx;
    font-size: 28rpx;
    line-height: 64rpx;
    color: #333;
    border: 1px solid #d3d4da;
    border-radius: 200rpx;
}

.showSearch {
    padding: 30rpx 26rpx 0;
}

bestLi {
    list-style: none;
    padding: 16rpx 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

bestLi view:nth-child(1) {
    color: rgb(80, 125, 175);
    font-size: 36rpx;
    line-height: 52rpx;
}

bestLi view:nth-child(2) {
    color: rgb(136, 136, 136);
    font-size: 28rpx;
    line-height: 36rpx;
}

.h3 {
    font-size: px(14);
    line-height: px(14);
    color: #666;
    font-weight: 400;
}

.searchBtn {
    height: px(50);
    margin-left: px(10);
    padding-right: px(12);
    font-size: px(16);
    line-height: px(50);
    color: #507daf;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
